<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/navs') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="300vw"/>
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <h5>Blog created by:</h5> 
        <img src="<%= blog.createdBy.profileImageURL %>" width="30px" />
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <br>
        <h3>Comments (<%= comments.length %>)</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="POST">
                <div class="mb-3">
                  <input type="text" class="form-control" name="content" placeholder="Enter comments...">
                </div>
                <button class="btn btn-sm btn-primary" type="submit">Add</button>
            </form>
        <% } %>
        <div class="container mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profileImageURL %>" width="30px" />
                <%= comment.createdBy.fullName %>
                <pre class="mt-2"><%= comment.content %></pre>
            <% }) %>
        </div>
    </div>


    <%- include('./partials/scripts') %>
</body>
</html>